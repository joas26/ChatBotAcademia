<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExemploZxingIntegration"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exemplo ZxingIntegracao"/>


    <Button
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCAN QRCODE"
       />




    <TextView
        android:id="@+id/txtResultNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercicio"
        android:textSize="20sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:id="@+id/imagemAparelho"/>


    <TextView
        android:id="@+id/txtResultIdade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instruções"
        android:textSize="20sp"/>




</LinearLayout>